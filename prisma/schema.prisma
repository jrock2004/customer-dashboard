generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Customer {
  id          Int          @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String       @unique
  phone       String
  imgUrl      String?
  initials    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  memberships Membership[]
}

model Membership {
  id          Int      @id @default(autoincrement())
  title       String
  count       Int
  totalCount  Int
  description String
  price       String
  memberId    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  member      Customer @relation(fields: [memberId], references: [id])
}
